
@{
    ViewBag.Title = "Index";
    
}

<div class="row match-height" ng-controller="DepartmentControllerList">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title" id="basic-layout-form-center">Department List</h4>
                <a class="heading-elements-toggle"><i class="icon-ellipsis font-medium-3"></i></a>
                <div class="heading-elements">
                    <ul class="list-inline mb-0">

                        <li><a data-action="reload"><i class="icon-reload"></i></a></li>
                        <li><a data-action="expand"><i class="icon-expand2"></i></a></li>

                    </ul>
                </div>
            </div>
            <div class="card-body collapse in">
                <div class="card-block">
                    <a class="btn btn-success" href="~/Department/Create">Add Department</a>
                    <table datatable="ng" dt-options="DepartmentControllerList.dtOptions" dt-column-defs="DepartmentControllerList.dtColumnDefs" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                             
                                <th>Name</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="Department in Departments">
                              
                                <td>{{ Department.DepartmentName }}</td>
                                <td><a class="btn btn-sm btn-success" href="~/Department/Edit?id={{Department.DepartmentID}}">Edit</a></td>
                            </tr>
                        </tbody>
                    </table>
                   

                </div>
            </div>
        </div>
    </div>
</div>

